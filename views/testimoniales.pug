extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales

        .row
            .col-md-12
                h2.d-block.w-100.text-center Comparte tu experiencia

                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje

                if(mensajes)
                        .alert.col.alert-success.text-center= mensajes

            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value= nombre)
                        .form-group 
                            label(for="correo") Correo Electr√≥nico 
                            input#nombre(type="text", placeholder="Tu Correo", name="email", class="form-control", value= email)
                        .form-group 
                            label(for="mensaje") Mensaje 
                            textarea#mensaje(class="form-control", name="mensaje", placeholder="Tu Mensaje", rows= 3, value= mensaje)
                        
                        input.btn.btn-success.btn-block(type="submit")
            